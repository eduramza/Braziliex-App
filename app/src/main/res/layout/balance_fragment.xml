<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.balance.BalanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_estimated_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/estimated_balance_description"
            android:textSize="@dimen/text_estimated_balance"
            android:textAlignment="textEnd"
            android:layout_marginTop="@dimen/padding_default_list"
            android:layout_marginEnd="@dimen/padding_default_list"
            android:layout_marginBottom="@dimen/padding_default_list"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_local_coins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_list_balance" />
    </LinearLayout>

</FrameLayout>